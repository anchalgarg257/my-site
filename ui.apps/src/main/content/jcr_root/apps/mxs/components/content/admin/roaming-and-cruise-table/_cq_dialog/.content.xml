<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Roaming and Cruise Table"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[maxis.dialog]">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <basic
                jcr:primaryType="nt:unstructured"
                jcr:title="Basic"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <title-note
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/authoring/dialog/note"
                                note="Expand dialog box to use colour picker."/>
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                fieldLabel="Feature Name"
                                name="./featureName"
                                useFixedInlineToolbar="{Boolean}true">
                                <rtePlugins jcr:primaryType="nt:unstructured">
                                    <format
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                    <experience-aem
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                    <justify
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                    <styles
                                        jcr:primaryType="nt:unstructured"
                                        features="*">
                                        <styles jcr:primaryType="nt:unstructured">
                                            <strikethrough
                                                jcr:primaryType="nt:unstructured"
                                                cssName="strikethrough"
                                                text="Strikethrough"/>
                                            <semi-bold
                                                jcr:primaryType="nt:unstructured"
                                                cssName="semi-bold"
                                                text="Semi Bold"/>
                                            <small
                                                jcr:primaryType="nt:unstructured"
                                                cssName="small"
                                                text="Small (14 px)"/>
                                            <smaller
                                                jcr:primaryType="nt:unstructured"
                                                cssName="smaller"
                                                text="Smaller(12 px)"/>
                                            <smallest
                                                jcr:primaryType="nt:unstructured"
                                                cssName="smallest"
                                                text="Smallest(10 px)"/>
                                        </styles>
                                    </styles>
                                </rtePlugins>
                                <uiSettings jcr:primaryType="nt:unstructured">
                                    <cui jcr:primaryType="nt:unstructured">
                                        <inline
                                            jcr:primaryType="nt:unstructured"
                                            toolbar="[format#bold,format#italic,format#underline,justify#justifyleft,justify#justifycenter,justify#justifyright,#styles]">
                                            <popovers jcr:primaryType="nt:unstructured">
                                                <styles
                                                    jcr:primaryType="nt:unstructured"
                                                    items="styles:getStyles:styles-pulldown"
                                                    ref="styles"/>
                                            </popovers>
                                        </inline>
                                        <dialogFullScreen
                                            jcr:primaryType="nt:unstructured"
                                            toolbar="[format#bold,format#italic,format#underline,#justify,#styles,experience-aem#colorPicker]">
                                            <popovers jcr:primaryType="nt:unstructured">
                                                <justify
                                                    jcr:primaryType="nt:unstructured"
                                                    items="[justify#justifyleft,justify#justifycenter,justify#justifyright]"
                                                    ref="justify"/>
                                                <styles
                                                    jcr:primaryType="nt:unstructured"
                                                    items="styles:getStyles:styles-pulldown"
                                                    ref="styles"/>
                                            </popovers>
                                        </dialogFullScreen>
                                    </cui>
                                </uiSettings>
                                <htmlRules jcr:primaryType="nt:unstructured">
                                    <blockHandling
                                        jcr:primaryType="nt:unstructured"
                                        removeSingleParagraphContainer="{Boolean}true"/>
                                </htmlRules>
                            </title>
                            <description-note
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/authoring/dialog/note"
                                note="Expand dialog box to use colour picker."/>
                            <description
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                fieldLabel="Feature Description"
                                name="./description"
                                useFixedInlineToolbar="{Boolean}true">
                                <rtePlugins jcr:primaryType="nt:unstructured">
                                    <format
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                    <experience-aem
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                    <justify
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                    <styles
                                        jcr:primaryType="nt:unstructured"
                                        features="*">
                                        <styles jcr:primaryType="nt:unstructured">
                                            <strikethrough
                                                jcr:primaryType="nt:unstructured"
                                                cssName="strikethrough"
                                                text="Strikethrough"/>
                                            <semi-bold
                                                jcr:primaryType="nt:unstructured"
                                                cssName="semi-bold"
                                                text="Semi Bold"/>
                                            <xlarge
                                                jcr:primaryType="nt:unstructured"
                                                cssName="xlarge"
                                                text="Largest (22 px)"/>
                                            <large
                                                jcr:primaryType="nt:unstructured"
                                                cssName="large"
                                                text="Large(18 px)"/>
                                            <small
                                                jcr:primaryType="nt:unstructured"
                                                cssName="small"
                                                text="Small (14 px)"/>
                                            <smaller
                                                jcr:primaryType="nt:unstructured"
                                                cssName="smaller"
                                                text="Smaller(12 px)"/>
                                            <smallest
                                                jcr:primaryType="nt:unstructured"
                                                cssName="smallest"
                                                text="Smallest(10 px)"/>
                                        </styles>
                                    </styles>
                                </rtePlugins>
                                <uiSettings jcr:primaryType="nt:unstructured">
                                    <cui jcr:primaryType="nt:unstructured">
                                        <inline
                                            jcr:primaryType="nt:unstructured"
                                            toolbar="[format#bold,format#italic,format#underline,justify#justifyleft,justify#justifycenter,justify#justifyright,#styles]">
                                            <popovers jcr:primaryType="nt:unstructured">
                                                <styles
                                                    jcr:primaryType="nt:unstructured"
                                                    items="styles:getStyles:styles-pulldown"
                                                    ref="styles"/>
                                            </popovers>
                                        </inline>
                                        <dialogFullScreen
                                            jcr:primaryType="nt:unstructured"
                                            toolbar="[format#bold,format#italic,format#underline,#justify,#styles,experience-aem#colorPicker]">
                                            <popovers jcr:primaryType="nt:unstructured">
                                                <justify
                                                    jcr:primaryType="nt:unstructured"
                                                    items="[justify#justifyleft,justify#justifycenter,justify#justifyright]"
                                                    ref="justify"/>
                                                <styles
                                                    jcr:primaryType="nt:unstructured"
                                                    items="styles:getStyles:styles-pulldown"
                                                    ref="styles"/>
                                            </popovers>
                                        </dialogFullScreen>
                                    </cui>
                                </uiSettings>
                                <htmlRules jcr:primaryType="nt:unstructured">
                                    <blockHandling
                                        jcr:primaryType="nt:unstructured"
                                        removeSingleParagraphContainer="{Boolean}true"/>
                                </htmlRules>
                            </description>
                        </items>
                    </column>
                </items>
            </basic>
            <advanced
                jcr:primaryType="nt:unstructured"
                jcr:title="Advanced"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <roaming-cost
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                class="cq-dialog-checkbox-showhide"
                                cq-dialog-checkbox-showhide-target=".hidefilter-showhide-target"
                                name="./isRoamingCost"
                                text="Checkbox to other Countries Roaming Costs?"
                                value="roaming-cost"/>
                            <showHideContainer
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container"
                                class="hide hidefilter-showhide-target"
                                showhidetargetvalue="roaming-cost">
                                <items jcr:primaryType="nt:unstructured">
                                    <plan-type
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/select"
                                        fieldLabel="Plan Type"
                                        name="./planType">
                                        <datasource
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="acs-commons/components/utilities/genericlist/datasource"
                                            path="/etc/acs-commons/lists/mxs-revamp-generic-lists/plan-type"/>
                                    </plan-type>
                                </items>
                            </showHideContainer>
                        </items>
                    </column>
                </items>
            </advanced>
        </items>
    </content>
</jcr:root>
