<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured">
    <content jcr:primaryType="nt:unstructured">
        <items jcr:primaryType="nt:unstructured">
            <tabs jcr:primaryType="nt:unstructured">
                <items jcr:primaryType="nt:unstructured">
                    <advanced
                        cq:showOnCreate="{Boolean}true"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Advanced"
                        sling:resourceType="granite/ui/components/foundation/section">
                        <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                            margin="{Boolean}false"/>
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <section1
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="Settings"
                                        sling:resourceType="granite/ui/components/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <language
                                                cq:showOnCreate="{Boolean}true"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                class="language"
                                                cq-msm-lockable="jcr:language"
                                                emptyText="Select"
                                                fieldLabel="Language"
                                                name="./jcr:language"
                                                renderReadOnly="{Boolean}true"
                                                translateOptions="{Boolean}true">
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="cq/gui/components/common/datasources/languages"
                                                    addNone="{Boolean}true"/>
                                            </language>
                                            <redirect
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                allowBulkEdit="true"
                                                cq-msm-lockable="redirectTarget"
                                                fieldLabel="Redirect"
                                                name="./redirectTarget"
                                                readOnlyURITemplate="/libs/wcm/core/content/sites/properties.html{+value}"
                                                renderReadOnly="{Boolean}true"
                                                rootPath="/content"/>
                                            <designs
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                cq-msm-lockable="cq:designPath"
                                                fieldLabel="Design"
                                                name="./cq:designPath"
                                                renderReadOnly="{Boolean}true"
                                                rootPath="/etc/designs"/>
                                            <alias
                                                cq:showOnCreate="{Boolean}true"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                cq-msm-lockable="sling:alias"
                                                fieldLabel="Alias"
                                                name="./sling:alias"
                                                renderReadOnly="{Boolean}true"/>
                                        </items>
                                    </section1>
                                    <templates
                                        cq:showOnCreate="{Boolean}false"
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="Templates Settings"
                                        sling:resourceType="granite/ui/components/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <allowedtemplates
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/multifield"
                                                class="foundation-layout-util-maximized-alt"
                                                fieldDescription="Click 'Add Field' to add a template or a list of templates to be allowed as child pages.                                                 Each value in the list must be an absolute path to a template or use '/.*' to allow all templates below this path."
                                                fieldLabel="Allowed Templates"
                                                renderReadOnly="{Boolean}true">
                                                <field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    name="./cq:allowedTemplates"
                                                    renderReadOnly="{Boolean}true"/>
                                            </allowedtemplates>
                                        </items>
                                    </templates>
                                    <cug
                                        cq:showOnCreate="{Boolean}false"
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="Closed User Group"
                                        sling:resourceType="granite/ui/components/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <enable
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                                cq-msm-lockable="cq:cugEnabled"
                                                name="./cq:cugEnabled"
                                                renderReadOnly="{Boolean}true"
                                                text="Enabled"
                                                value="true"/>
                                            <deleteenable
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/hidden"
                                                name="./cq:cugEnabled@Delete"
                                                value="true"/>
                                            <loginpage
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                cq-msm-lockable="cq:cugLoginPage"
                                                fieldLabel="Login Page"
                                                name="./cq:cugLoginPage"
                                                renderReadOnly="{Boolean}true"
                                                rootPath="/content"/>
                                            <admittedgroups
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/multifield"
                                                cq-msm-lockable="cq:cugPrincipals"
                                                fieldLabel="Admitted Groups"
                                                renderReadOnly="{Boolean}true">
                                                <field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/select"
                                                    name="./cq:cugPrincipals">
                                                    <datasource
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/authorizable/selectdatasource"
                                                        query="\{&quot;selector&quot;: &quot;group&quot;}"/>
                                                </field>
                                            </admittedgroups>
                                            <realm
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                cq-msm-lockable="cq:cugRealm"
                                                fieldDescription="Leave empty to use the page title"
                                                fieldLabel="Realm"
                                                name="./cq:cugRealm"
                                                renderReadOnly="{Boolean}true"/>
                                        </items>
                                    </cug>
                                    <export
                                        cq:showOnCreate="{Boolean}false"
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="Export"
                                        sling:resourceType="granite/ui/components/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <config
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                cq-msm-lockable="cq:exportTemplate"
                                                fieldLabel="Export Configuration"
                                                name="./cq:exportTemplate"
                                                optionLoader="cq.exportTemplate"
                                                renderReadOnly="{Boolean}true"
                                                rootPath="/etc/contentsync/templates"/>
                                        </items>
                                    </export>
                                </items>
                            </column>
                        </items>
                    </advanced>
                    <article-basic
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Article Details"
                        sling:orderBefore="thumbnail"
                        sling:resourceType="granite/ui/components/foundation/section">
                        <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <section
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="Article Details"
                                        sling:resourceType="granite/ui/components/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <articleTitle
                                                cq:showOnCreate="{Boolean}true"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                fieldLabel="Article Title *"
                                                name="./articleTitle"
                                                required="{Boolean}true"/>
                                            <articleDescription
                                                cq:showOnCreate="{Boolean}true"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                fieldLabel="Article Description"
                                                name="./articleDescription"/>
                                            <image
                                                cq:showOnCreate="{Boolean}true"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                fieldLabel="Image *"
                                                name="./assetPath"
                                                required="{Boolean}true"
                                                rootPath="/content/dam"/>
                                            <imagealttxt
                                                cq:showOnCreate="{Boolean}true"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                fieldLabel="Image Alt Text *"
                                                name="./imageAltText"
                                                required="{Boolean}true"/>
                                            <publishDate
                                                cq:showOnCreate="{Boolean}true"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/datepicker"
                                                allowBulkEdit="{Boolean}true"
                                                displayedFormat="MMMM DD, YYYY hh:mm a"
                                                displayTimezoneMessage="{Boolean}true"
                                                fieldLabel="Publish Date"
                                                name="./publishDate"
                                                renderReadOnly="{Boolean}true"
                                                type="datetime"/>
                                            <publishDate_type
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/hidden"
                                                allowBulkEdit="{Boolean}true"
                                                ignoreData="{Boolean}true"
                                                name="./publishDate@TypeHint"
                                                value="Date"/>
                                            <authorName
                                                cq:showOnCreate="{Boolean}true"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                fieldLabel="Author Name"
                                                name="./authorName"/>
                                            <articleType
                                                cq:showOnCreate="{Boolean}true"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/select"
                                                class="cq-dialog-dropdown-showhide-multival"
                                                cq-dialog-dropdown-showhide-multival-target=".urlPath-hide-show"
                                                fieldLabel="Article Type"
                                                name="./articleType"
                                                required="{Boolean}true"
                                                text="Article Type">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <press-release-without-image-video
                                                        jcr:primaryType="nt:unstructured"
                                                        selected="{Boolean}true"
                                                        text="Articles Without Image/Video"
                                                        value="pr-without-imagevid"/>
                                                    <press-release-with-image-video
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Articles With Image/Video"
                                                        value="pr-with-imagevid"/>
                                                    <image
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Third Party Images"
                                                        value="type-image"/>
                                                    <pop-up-model-video
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Pop Up Modal Video"
                                                        value="type-video"/>
                                                    <booklet-brochure
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Booklet/Brochures"
                                                        value="type-booklet"/>
                                                </items>
                                            </articleType>
                                            <showHideContainer
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/container"
                                                class="hide urlPath-hide-show"
                                                showhidetargetmultivalue="type-video,type-image">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <URL
                                                        cq:showOnCreate="{Boolean}true"
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                        fieldLabel="URL"
                                                        name="./urlPath"
                                                        rootPath="/content"
                                                        set-field-required-on-show="{Boolean}true"/>
                                                </items>
                                            </showHideContainer>
                                            <category
                                                cq:showOnCreate="{Boolean}true"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/common/tagspicker"
                                                fieldLabel="Article Category *"
                                                name="./stickers"
                                                validation="maxis.tag.required"/>
                                        </items>
                                    </section>
                                </items>
                            </column>
                        </items>
                    </article-basic>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
